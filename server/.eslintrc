{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/typescript",
    "prettier", "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "simple-import-sort",
    "import",
    "prettier"
  ],
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "no-unused-vars": "off",
    "simple-import-sort/sort": "off",
    "sort-imports": ["error", { "ignoreCase": true, "ignoreDeclarationSort": true }],
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "import/no-unresolved": "off",
    "import/order": [
      "error",
      {
        "groups": [ "builtin", "external", "internal", ["parent", "sibling"] ],
        "pathGroups": [
          { "pattern": "@src/**", "group": "external", "position": "after" },
          { "pattern": "@config/**", "group": "external", "position": "after" },
          { "pattern": "@db/**", "group": "external", "position": "after" },
          { "pattern": "@lib/**", "group": "external", "position": "after" },
          { "pattern": "@models/**", "group": "external", "position": "after" },
          { "pattern": "@utils/**", "group": "external", "position": "after" }
        ],
        "pathGroupsExcludedImportTypes": ["internal"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "ignorePatterns": [
    "test/*.ts",
    "src/main.ts",
    "src/config/*.ts",
    "src/lib/**/**/tests/*.ts"
  ]
}
